background no
update_interval 1
double_buffer yes
no_buffers yes
text_buffer_size 2048

gap_x 20
minimum_size 600 400
maximum_width 800

own_window yes
own_window_type conky
own_window_transparent yes
own_window_argb_visual yes
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below

border_inner_margin 0
border_outer_margin 0
alignment mr

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

override_utf8_locale yes
use_xft yes
xftfont caviar dreams:size=9
xftalpha 0.5
uppercase no

default_color FFFFFF # white
color1 FFFFFF # white
color2 0C2E8A # dark blue

lua_load [PATH]/functions.lua # set path to the functions.lua
lua_startup_hook conky_init
lua_draw_hook_post conky_main
lua_shutdown_hook conky_free

